#include <iostream>
using namespace std;

// Forward declaration
class B;

class A {
private:
    int x;

public:
    void setX(int val) {
        x = val;
    }

    // Friend function declaration
    friend void showSum(A a, B b);

    // Friend class declaration
    friend class B;
};

class B {
private:
    int y;

public:
    void setY(int val) {
        y = val;
    }

    // Member function of friend class accessing private member of A
    void displaySum(A a) {
        cout << "Sum (A.x + B.y) using friend class: " << (a.x + y) << endl;
    }

    // Friend function can also access private members of both classes
    friend void showSum(A a, B b);
};

// Definition of friend function
void showSum(A a, B b) {
    cout << "Sum (A.x + B.y) using friend function: " << (a.x + b.y) << endl;
}

int main() {
    A a1;
    B b1;

    a1.setX(10);
    b1.setY(20);

    // Using friend function
    showSum(a1, b1);

    // Using friend class
    b1.displaySum(a1);

    return 0;
}
