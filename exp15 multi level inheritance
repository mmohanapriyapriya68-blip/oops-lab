#include <iostream>
using namespace std;

// Base class
class Person {
protected:
    string name;
public:
    void setName(string n) {
        name = n;
    }
};

// Derived class 1
class Student : public Person {
protected:
    int rollNo;
public:
    void setRollNo(int r) {
        rollNo = r;
    }
};

// Derived class 2
class Result : public Student {
private:
    int marks;
public:
    void setMarks(int m) {
        marks = m;
    }

    void display() {
        cout << "Name   : " << name << endl;
        cout << "RollNo : " << rollNo << endl;
        cout << "Marks  : " << marks << endl;
    }
};

int main() {
    Result r1;

    r1.setName("Mohanapriya");
    r1.setRollNo(11249);
    r1.setMarks(89);

    cout << "--- Student Result ---" << endl;
    r1.display();

    return 0;
}
