#include <iostream>
using namespace std;

int main() {
    int numerator, denominator;
    float result;

    cout << "Enter numerator: ";
    cin >> numerator;
    cout << "Enter denominator: ";
    cin >> denominator;

    try {
        if (denominator == 0) {
            throw denominator; // Throw exception if denominator is 0
        }
        result = (float)numerator / denominator;
        cout << "Result: " << result << endl;
    }
    catch (int e) {
        cout << "Exception Caught: Division by " << e << " is not allowed!" << endl;
    }

    cout << "\nProgram continues after exception handling..." << endl;

    return 0;
}
